<h2><%= @user.full_name %>'s Portfolio</h2>


  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <tr>
          <td><strong>Name: </strong><%= @user.full_name %></td>
          <td><strong>Email: </strong><%= @user.email %></td>          
          <td>
            <% if current_user.not_friends_with?(@user.id) %>
              <%= link_to "Follow", friendships_path(friend: @user), method: :post, class: 'btn btn-sm btn-primary' %>
            <% else %>
              <%= link_to "Unfollow", friendship_path(@user), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>


<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list'%>
<% else %>
  <p class="lead">User is not tracking any stocks</p>
<% end %>
